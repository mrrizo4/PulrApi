files:
  "/etc/nginx/nginx.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      user  nginx;
      worker_processes  auto;
      error_log  /var/log/nginx/error.log warn;
      pid        /var/run/nginx.pid;

      events {
          worker_connections  1024;
      }

      http {
          include       /etc/nginx/mime.types;
          default_type  application/octet-stream;

          log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                            '$status $body_bytes_sent "$http_referer" '
                            '"$http_user_agent" "$http_x_forwarded_for"';

          access_log  /var/log/nginx/access.log  main;

          sendfile        on;
          keepalive_timeout  65;

          types_hash_max_size 2048;

          include /etc/nginx/conf.d/*.conf;
      }
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 30M;
      proxy_buffer_size 128k;
      proxy_buffers 8 256k;
      proxy_busy_buffers_size 256k;
      server {
          listen 80;
          location / {
              proxy_pass http://127.0.0.1:5000;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }
      }
commands:
  remove_default_conf:
    command: find /etc/nginx/conf.d/ -type f -not -name proxy.conf -delete && rm -rf /etc/nginx/conf.d/elasticbeanstalk* /etc/nginx/conf.d/healthd*
    ignoreErrors: true
  copy_platform_files:
    command: cp -r /var/app/current/.platform/nginx/* /etc/nginx/ && cp -r /var/app/current/.platform/nginx/conf.d/* /etc/nginx/conf.d/
    ignoreErrors: true
  restart_nginx:
    command: systemctl restart nginx
    ignoreErrors: false
